<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UniWar.GameStatisticsView"
             >

   <VerticalStackLayout 
       VerticalOptions="Center"
       Padding="10,0,10,20">
        <!-- Simulazione Material Card -->
        <Frame CornerRadius="12"
               HasShadow="True"
               BackgroundColor="White"> 
            
            <VerticalStackLayout>
              <!-- Titolo -->
              <Label Text="STATISTICHE GARA:"
                     FontSize="25"
                     FontAttributes="Bold"
                     TextColor="#333"
                     HorizontalOptions="Center"/>
              
              <!-- Descrizione -->
              <Label Text=""
                     FontSize="16"
                     TextColor="#666"
                     HorizontalOptions="Center"
                     Margin="0,5,0,10"/>

              <Button
                Text="Chiudi"
                Clicked="OnCloseButtonClicked"
                Margin="0,20,0,0"
                WidthRequest="200"
                />
                     
            </VerticalStackLayout>
            
        </Frame>

    </VerticalStackLayout>
</ContentPage>
