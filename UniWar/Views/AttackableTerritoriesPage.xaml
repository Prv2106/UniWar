<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UniWar.AttackableTerritoriesPage">

        <!-- Material Card -->
        <Frame Padding="25"
               CornerRadius="12"
               HasShadow="True"
               BackgroundColor="White"
               Margin="10"
               VerticalOptions="Center">
            
            <VerticalStackLayout>
              
              <!-- Titolo -->
              <Image
                Source="soldier.png"
                WidthRequest="200"
                />
              <!-- Testo che spiega all'utente che deve fare -->
              <Label Text="Seleziona il territorio nemico da attaccare!"
                     FontSize="25"
                     TextColor="#666"
                     HorizontalOptions="Center"
                     Margin="0,5,0,10"/>

             <CollectionView ItemsSource="{Binding AttackableTerritories}"
                                   ItemsLayout="HorizontalList"
                                   Margin="0,20,0,40">
                     
                     <CollectionView.ItemTemplate>
                            <DataTemplate>
                            <HorizontalStackLayout>
                                   <Frame Padding="5"
                                   CornerRadius="12"
                                   HasShadow="True"
                                   BackgroundColor="Transparent"
                                   BorderColor="Black"
                                   WidthRequest="180"
                                   HeightRequest="100">
                                    <Grid>
                                        <Label 
                                            TextColor="Black"
                                            VerticalOptions="Center"
                                            HorizontalOptions="Center"
                                            Text="{Binding}"/>
                                        <Button 
                                            Clicked="OnTerritoryClicked"
                                            WidthRequest="150"
                                            BackgroundColor="Transparent"/>
                                    </Grid>
                                
                                   
                                   
                            </Frame>
                            <Label Margin="3"/>
                            </HorizontalStackLayout>
                            
                            </DataTemplate>
                     </CollectionView.ItemTemplate>
              </CollectionView>

              <Button
                Text="Annulla"
                WidthRequest="130"
                BackgroundColor="DarkRed"
                Clicked="OnCancelButtonClicked"
                />
                     
            </VerticalStackLayout>
            
        </Frame>

</ContentPage>
