<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UniWar.ConqueredTerritoryModal"
             Padding="20">

    <!-- Material Card -->
        <Frame Padding="25"
               CornerRadius="12"
               HasShadow="True"
               BackgroundColor="White"
               Margin="10"
               VerticalOptions="Center">
            
            <VerticalStackLayout>
              
              <!-- Titolo -->
              <Image
                Source="conquest.png"
                WidthRequest="210"
                />
              <!-- Testo che spiega all'utente che deve fare -->
              <Label Text="Hai conquistato il territorio nemico!"
                     FontSize="25"
                     TextColor="#666"
                     HorizontalOptions="Center"
                     Margin="0,25,0,10"/>

             <Label Text="N.B: Scegli il numero di carri armati da spostare nella tua nuova terra"
                     FontSize="15"
                     TextColor="#666"
                     HorizontalOptions="Center"
                     Margin="0,5,0,10"/>


              <Grid ColumnDefinitions="Auto,*,Auto"
                     BackgroundColor="White"
                     HeightRequest="50"
                     VerticalOptions="Center"
                     HorizontalOptions="Center"
                     Margin="10">
        
                     <!-- Pulsante "-" -->
                     <Button Text="âˆ’"
                            FontSize="24"
                            TextColor="Orange"
                            BackgroundColor="Transparent"
                            BorderWidth="0"
                            Clicked="OnDecreaseClicked"
                            Grid.Column="0"/>

                     <!-- Numero attuale -->
                     <Label x:Name="numberLabel"
                            Text="1"
                            FontSize="24"
                            HorizontalTextAlignment="Center"
                            VerticalTextAlignment="Center"
                            Grid.Column="1"/>

                     <!-- Pulsante "+" -->
                     <Button Text="+"
                            FontSize="24"
                            TextColor="Orange"
                            BackgroundColor="Transparent"
                            BorderWidth="0"
                            Clicked="OnIncreaseClicked"
                            Grid.Column="2"/>
                     
              </Grid>

              <!-- Bottone -->
              <Button Text="Conferma"
                     TextColor="White"
                     CornerRadius="8"
                     Padding="10"
                     HorizontalOptions="Center"
                     WidthRequest="100"
                     BackgroundColor="Green"
                     Clicked="OnConfirmButtonClicked"
                     Margin="20"/>
                     
            </VerticalStackLayout>
            
        </Frame>
</ContentPage>
