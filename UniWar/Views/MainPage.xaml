<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UniWar.MainPage"
             Title=""
             Padding="20">

    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">

        <Image Source="banner.png"
            WidthRequest="950"
            HeightRequest="170"
            Aspect="AspectFit"/>

        <Image Source="mappa.png"
            WidthRequest="780"
            HeightRequest="400"
            Aspect="AspectFit"
            Margin="0,0,0,20"/>

        <Button Text="Nuova partita"
                Clicked="OnNuovaPartitaButtonClicked"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                HeightRequest="70"
                WidthRequest="180"
                FontSize="20"
                Margin="20,0,20,20"/>

        <Button Text="Prova"
                Clicked="OnCpuAttack"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                HeightRequest="70"
                WidthRequest="180"
                FontSize="20"
                Margin="20,0,20,20"/>

    
    </StackLayout>

</ContentPage>
