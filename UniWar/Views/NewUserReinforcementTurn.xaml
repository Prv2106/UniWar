<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UniWar.NewUserReinforcementTurn">

        <!-- Material Card -->
        <Frame Padding="25"
               CornerRadius="12"
               HasShadow="True"
               BackgroundColor="White"
               Margin="10"
               VerticalOptions="Center">
            
            <VerticalStackLayout>
              
              <!-- Titolo -->
              <Image
                Source="muscle.png"
                WidthRequest="250"
                />
              <!-- Testo che spiega all'utente che deve fare -->
              <Label Text="Rinforziamo l'armata!"
                     FontSize="25"
                     TextColor="#666"
                     HorizontalOptions="Center"
                     Margin="0,5,0,10"/>

             <Label Text="In base ai territori che possiede, hai la possibilità di aggiungere il seguente numero di carri armati, ad uno ad uno, sui territori che ritieni più opportuni:"
                     FontSize="20"
                     TextColor="#666"
                     HorizontalOptions="Center"
                     Margin="0,5,0,0"/>

             <Label x:Name="tanksNumber"
                     FontSize="15"
                     TextColor="#666"
                     HorizontalOptions="Center"
                     />
                    

              <!-- Bottone -->
              <Button Text="Capito"
                     TextColor="White"
                     CornerRadius="8"
                     Padding="10"
                     HorizontalOptions="Center"
                     WidthRequest="100"
                     BackgroundColor="Green"
                     Clicked="OnConfirmButtonClicked"
                     Margin="40"/>
                     
            </VerticalStackLayout>
            
        </Frame>

</ContentPage>
