<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UniWar.GenericModal">

        <!-- Material Card -->
        <Frame Padding="25"
               CornerRadius="12"
               HasShadow="True"
               BackgroundColor="White"
               Margin="10"
               VerticalOptions="Center">
            
            <VerticalStackLayout>
                
                <!-- Icona di informazione e testo -->
                <Image
                Source ="info.png "
                WidthRequest="100"
                HeightRequest="100" 
                Margin="5"               
                />

                

            
              <Label Text="Attenzione"
                     FontSize="15"
                     TextColor="#666"
                     HorizontalOptions="Center"
                     Margin="0,5,0,10"/>

                <Label 
                HorizontalOptions="Center"
                x:Name = "textInfo"
                VerticalOptions="Center"
                FontSize="24"
                />

               
              <Button
                Text="Chiudi avviso"
                WidthRequest="200"
                Clicked="OnConfirmButtonClicked"
                Margin="0,30,0,0"
                
                />
                     
            </VerticalStackLayout>
            
        </Frame>

</ContentPage>
