<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UniWar.SignInUp">

        <!-- Material Card -->
        <Frame Padding="25"
               CornerRadius="12"
               HasShadow="True"
               BackgroundColor="White"
               Margin="10"
               VerticalOptions="Center">
            
            <VerticalStackLayout>
                
                <!-- Icona di informazione e testo -->
                <Image x:Name ="ImageInfo"
                WidthRequest="100"
                HeightRequest="100" 
                Margin="5"               
                />

                

            
              <Label x:Name ="Header"
                     FontSize="20"
                     TextColor="#666"
                     HorizontalOptions="Center"
                     Margin="0,5,0,10"/>

               <!-- Campo Nome Utente -->
             <Entry x:Name="UsernameEntry"
                   Placeholder="Nome utente"
                   TextColor ="white"
                   BackgroundColor ="Black"
                   Margin="0,5,0,5"
                   WidthRequest="200"/>
                
            
            <!-- Campo Password -->
             <Entry x:Name="PasswordEntry"
                   Placeholder="Password"
                   BackgroundColor ="Black"
                   TextColor ="white"
                   IsPassword="True"
                   Margin="0,5,0,10"
                   WidthRequest="200"/>

               <Label x:Name ="warning"
                     FontSize="20"
                     TextColor="DarkRed"
                     HorizontalOptions="Center"
                     IsVisible = "False"
                     Margin="0,5,0,10"/>
              
              <!-- Messaggio di passaggio tra Login e Registrazione -->
              <Label x:Name="SwitchModeLabel"
                    FontSize="16"
                    TextColor="Blue"
                    HorizontalOptions="Center"
                    TextDecorations="Underline">
                  <Label.GestureRecognizers>
                      <TapGestureRecognizer Tapped="OnSwitchModeTapped"/>
                  </Label.GestureRecognizers>
              </Label>

               <Button x:Name = "Button"
                WidthRequest="200"
                BackgroundColor ="DarkGreen"
                Margin="0,10,0,0"
                
                />

              
            </VerticalStackLayout>
            
        </Frame>

</ContentPage>
