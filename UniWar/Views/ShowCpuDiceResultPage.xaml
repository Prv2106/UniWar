<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UniWar.ShowCpuDiceResultPage">

        <!-- Material Card -->
        <Frame Padding="25"
               CornerRadius="12"
               HasShadow="True"
               BackgroundColor="White"
               Margin="10"
               VerticalOptions="Center">
            
            <VerticalStackLayout>

              <!-- Icona dei dadi e testo -->
              <HorizontalStackLayout
                HorizontalOptions="Center">
                <Image
                Source="dice.png"
                WidthRequest="120"
                />
                <Label
                    VerticalOptions="Center"
                    Text="Risultato dell'attacco"
                    FontSize="24"
                    />
              </HorizontalStackLayout>


              
              <!-- dadi utente -->
              <Label Text="I tuoi dadi"
                     FontSize="15"
                     TextColor="#666"
                     HorizontalOptions="Center"
                     Margin="0,5,0,10"/>

                <HorizontalStackLayout x:Name="userDiceImages"
                    HorizontalOptions="Center">
                    <Image
                      IsVisible ="False"
                    Source="attack5.png"
                    WidthRequest="120"
                    Margin="10"
                    />
                    <Image
                      IsVisible ="False"
                    Source="attack6.png"
                    WidthRequest="120"
                    Margin="10"
                    />
                    <Image
                      IsVisible ="False"
                    Source="attack2.png"
                    WidthRequest="120"
                    Margin="10"
                    />
              </HorizontalStackLayout>


              <!-- dadi cpu -->
              <Label Text="Dadi avversario"
                     FontSize="15"
                     TextColor="#666"
                     HorizontalOptions="Center"
                     Margin="0,5,0,10"/>

                <HorizontalStackLayout x:Name="cpuDiceImages"
                    HorizontalOptions="Center">
                    <Image
                    IsVisible ="False"
                    Source="defend5.png"
                    WidthRequest="120"
                    Margin="10"
                    />
                    <Image
                      IsVisible ="False"
                    Source="defend6.png"
                    WidthRequest="120"
                    Margin="10"
                    />
                    <Image
                      IsVisible ="False"
                    Source="defend.png"
                    WidthRequest="120"
                    Margin="10"
                    />
              </HorizontalStackLayout>

              
              <!-- Testo per avvisi (es: eccezioni) -->
              <Label  
                x:Name="WarningText"
                IsVisible="True"
                TextColor="Black"
                Padding="10"
                HorizontalOptions="Center"
                Margin="0,20,0,35"/>

          


                
            </VerticalStackLayout>
            
        </Frame>

</ContentPage>
