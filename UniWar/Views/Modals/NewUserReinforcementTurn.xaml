<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UniWar.NewUserReinforcementTurn">

        <!-- Material Card -->
        <Frame Padding="25"
               CornerRadius="12"
               HasShadow="True"
               BackgroundColor="White"
               Margin="10"
               MaximumWidthRequest="770"
               VerticalOptions="Center">
            
            <VerticalStackLayout>
              
              <!-- Titolo -->
              <Image
                Source="muscle.png"
                WidthRequest="220"
                />
              <!-- Testo che spiega all'utente che deve fare -->
              <Label Text="Rinforziamo l'armata!"
                     FontSize="25"
                     TextColor="#666"
                     HorizontalOptions="Center"
                     Margin="0,35,0,10"/>

             <Label Text="Aggiungi i carri armati, ad uno ad uno, sui territori che ritieni piÃ¹ opportuni"
                     FontSize="17.5"
                     TextColor="#666"
                     HorizontalOptions="Center"
                     Margin="0,5,0,0"/>                    

              <!-- Bottone -->
              <Button Text="Capito"
                     TextColor="White"
                     CornerRadius="8"
                     Padding="10"
                     HorizontalOptions="Center"
                     WidthRequest="100"
                     BackgroundColor="Green"
                     Clicked="OnConfirmButtonClicked"
                     Margin="20"/>
                     
            </VerticalStackLayout>
            
        </Frame>

</ContentPage>
