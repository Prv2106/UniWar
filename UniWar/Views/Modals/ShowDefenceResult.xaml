<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UniWar.ShowDefenceResult">

        <!-- Material Card -->
        <Frame Padding="25"
               CornerRadius="12"
               HasShadow="True"
               BackgroundColor="White"
               Margin="10"
               VerticalOptions="Center">
            
            <VerticalStackLayout>

                <Image 
                Source = "white_flag.png"
                WidthRequest="100"
                HeightRequest="100" 
                Margin="5"               
                />

                 <Label 
                    Text = "Hai perso il territorio"
                    FontSize="30"
                    TextColor="#666"
                    HorizontalOptions="Center"
                    Margin="0,5,0,10"/>

                <Label  x:Name ="Info"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        FontSize="24"
                        />

                <Button
                Text="ok"
                WidthRequest="200"
                Clicked="OnConfirmButtonClicked"
                Margin="0,10,0,0" />
                     
            </VerticalStackLayout>   
                             
        </Frame>
</ContentPage>
