<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UniWar.WinOrLoseModal">

        <!-- Material Card -->
        <Frame Padding="25"
               CornerRadius="12"
               HasShadow="True"
               BackgroundColor="White"
               Margin="10"
               MaximumWidthRequest="770"
               VerticalOptions="Center">
            
            <VerticalStackLayout>
                
                <!-- Icona di informazione e testo -->
                <Image x:Name = "ImageInfo"
                WidthRequest="100"
                HeightRequest="100" 
                Margin="5"               
                />

              <Label x:Name ="Header" 
                     FontSize="15"
                     TextColor="#666"
                     HorizontalOptions="Center"
                     Margin="0,5,0,10"/>

                <Label x:Name ="Info"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                FontSize="24"
                />

               
              <Button
                Text="Schermata Iniziale"
                WidthRequest="200"
                Clicked="OnGoToMainPageButtonClicked"
                Margin="0,30,0,0"
                
                />
                     
            </VerticalStackLayout>
            
        </Frame>

</ContentPage>
