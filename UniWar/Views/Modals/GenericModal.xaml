<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UniWar.GenericModal">

        <!-- Material Card -->
        <Frame Padding="25"
               CornerRadius="12"
               HasShadow="True"
               BackgroundColor="White"
               Margin="10"
               VerticalOptions="Center">
            
            <VerticalStackLayout>
                
                <!-- Icona di informazione e testo -->
                <Image x:Name ="ImageInfo"
                WidthRequest="100"
                HeightRequest="100" 
                Margin="5"               
                />
            
              <Label Text="Attenzione"
                     FontSize="20"
                     TextColor="#666"
                     HorizontalOptions="Center"
                     Margin="0,5,0,10"/>

                <Label 
                HorizontalOptions="Center"
                x:Name = "textInfo"
                VerticalOptions="Center"
                FontSize="24"
                />
                <Label x:Name ="TankCount"
                     FontSize="15"
                     IsVisible ="false"
                     TextColor="#666"
                     HorizontalOptions="Center"
                     Margin="0,5,0,10"/>
               <Button
                Text="Ok"
                WidthRequest="200"
                Clicked="OnConfirmButtonClicked"
                Margin="0,10,0,0"
                
                />

              
            </VerticalStackLayout>
            
        </Frame>

</ContentPage>
