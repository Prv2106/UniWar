<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UniWar.NewUserAttackTurn">

        <!-- Material Card -->
        <Frame Padding="25"
               CornerRadius="12"
               HasShadow="True"
               BackgroundColor="White"
               Margin="10"
               VerticalOptions="Center">
            
            <VerticalStackLayout>
              
              <!-- Titolo -->
              <Image
                Source="cannon.png"
                WidthRequest="210"
                />
              <!-- Testo che spiega all'utente che deve fare -->
              <Label Text="Adesso puoi attaccare!"
                     FontSize="25"
                     TextColor="#666"
                     HorizontalOptions="Center"
                     Margin="0,25,0,10"/>

             <Label Text="N.B: Puoi scegliere anche di passare il turno"
                     FontSize="20"
                     TextColor="#666"
                     HorizontalOptions="Center"
                     Margin="0,5,0,10"/>

              <!-- Bottone -->
              <Button Text="Capito"
                     TextColor="White"
                     CornerRadius="8"
                     Padding="10"
                     HorizontalOptions="Center"
                     WidthRequest="100"
                     BackgroundColor="Green"
                     Clicked="OnConfirmButtonClicked"
                     Margin="20"/>
                     
            </VerticalStackLayout>
            
        </Frame>

</ContentPage>
