<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- 🎨 Colori principali per RisiKo! -->
    <Color x:Key="Primary">Black</Color> <!-- Nero -->
    <Color x:Key="PrimaryDark">#B71C1C</Color> <!-- Rosso scuro -->
    <Color x:Key="PrimaryDarkText">#FFFFFF</Color> <!-- Testo su sfondo scuro -->

    <Color x:Key="Secondary">#FBC02D</Color> <!-- Giallo brillante -->
    <Color x:Key="SecondaryDarkText">#212121</Color> <!-- Testo scuro su giallo -->

    <Color x:Key="Tertiary">#388E3C</Color> <!-- Verde scuro per contrasto -->
    <Color x:Key="TertiaryDark">#1B5E20</Color>

    <!-- ⚫️ Neutri e colori di base -->
    <Color x:Key="White">White</Color>
    <Color x:Key="Black">Black</Color>
    <Color x:Key="MidnightBlue">#283593</Color> <!-- Blu scuro per elementi strategici -->
    <Color x:Key="DarkGray">#616161</Color> <!-- Grigio medio per sfondi neutri -->
    <Color x:Key="OffBlack">#1F1F1F</Color> <!-- Nero soft per i bordi -->

    <!-- 🌍 Colori per sfondi e territori -->
    <Color x:Key="MapGreen">#4CAF50</Color> <!-- Verde mappa -->
    <Color x:Key="MapBrown">#FF8D6E63</Color> <!-- Marrone per bordi e dettagli -->
    <Color x:Key="MapBlue">#0288D1</Color> <!-- Azzurro per l’oceano -->

    <!-- ⚙️ Grigi per testo e sfondi -->
    <Color x:Key="Gray100">#F5F5F5</Color>
    <Color x:Key="Gray200">#EEEEEE</Color>
    <Color x:Key="Gray300">#E0E0E0</Color>
    <Color x:Key="Gray400">#BDBDBD</Color>
    <Color x:Key="Gray500">#9E9E9E</Color>
    <Color x:Key="Gray600">#757575</Color>
    <Color x:Key="Gray900">#212121</Color>
    <Color x:Key="Gray950">#121212</Color>

    <!-- 🖌 Brush per utilizzo nei controlli -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Tertiary}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>

    <SolidColorBrush x:Key="MapGreenBrush" Color="{StaticResource MapGreen}"/>
    <SolidColorBrush x:Key="MapBrownBrush" Color="{StaticResource MapBrown}"/>
    <SolidColorBrush x:Key="MapBlueBrush" Color="{StaticResource MapBlue}"/>

    <SolidColorBrush x:Key="Gray100Brush" Color="{StaticResource Gray100}"/>
    <SolidColorBrush x:Key="Gray200Brush" Color="{StaticResource Gray200}"/>
    <SolidColorBrush x:Key="Gray300Brush" Color="{StaticResource Gray300}"/>
    <SolidColorBrush x:Key="Gray400Brush" Color="{StaticResource Gray400}"/>
    <SolidColorBrush x:Key="Gray500Brush" Color="{StaticResource Gray500}"/>
    <SolidColorBrush x:Key="Gray600Brush" Color="{StaticResource Gray600}"/>
    <SolidColorBrush x:Key="Gray900Brush" Color="{StaticResource Gray900}"/>
    <SolidColorBrush x:Key="Gray950Brush" Color="{StaticResource Gray950}"/>
</ResourceDictionary>
